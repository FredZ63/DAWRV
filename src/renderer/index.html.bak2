<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DAWRV - Digital Audio Workstation Response to Voice</title>
    <link rel="stylesheet" href="styles/main.css">
    <link rel="stylesheet" href="styles/rhea.css">
</head>
<body>
    <div id="app" class="app-container">
        <!-- Top Navigation -->
        <nav class="top-nav">
            <div class="nav-brand">
                <h1>DAWRV</h1>
                <span class="pronunciation">(DARVEE)</span>
                <span class="version">v1.0</span>
            </div>
            <div class="nav-tagline">
                Digital Audio Workstation Response to Voice
            </div>
        </nav>

        <div class="main-content">
            <!-- RHEA Panel -->
            <section class="rhea-panel">
                <div class="rhea-header">
                    <h2>RHEA</h2>
                    <p class="rhea-subtitle">Responsive Heuristic Environment Assistant</p>
                </div>

                <div class="rhea-avatar-container">
                    <div class="avatar-wrapper">
                        <div class="rhea-avatar">
                            <div class="avatar-glow"></div>
                            <div class="avatar-inner"><img src="assets/images/rhea_avatar.png" alt="RHEA" style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;"></div>
                        </div>
                        <div class="status-indicator" id="rhea-status"></div>
                    </div>
                    
                    <div class="rhea-info">
                        <div class="status-display">
                            <span id="status-text" class="status-text">Ready</span>
                            <div class="audio-visualizer" id="audio-viz">
                                <div class="viz-bar"></div>
                                <div class="viz-bar"></div>
                                <div class="viz-bar"></div>
                                <div class="viz-bar"></div>
                                <div class="viz-bar"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Voice Control Panel -->
                <div class="voice-controls">
                    <button id="voice-toggle" class="voice-btn primary">
                        <span class="btn-icon">üé§</span>
                        <span class="btn-text">Start Listening</span>
                    </button>
                </div>

                <!-- Quick Actions -->
                <div class="quick-actions">
                    <h3>Quick Commands</h3>
                    <div class="action-grid">
                        <button class="quick-cmd" data-command="play">‚ñ∂Ô∏è Play</button>
                        <button class="quick-cmd" data-command="stop">‚èπÔ∏è Stop</button>
                        <button class="quick-cmd" data-command="record">‚è∫Ô∏è Record</button>
                        <button class="quick-cmd" data-command="undo">‚Ü∂ Undo</button>
                    </div>
                </div>
            </section>

            <!-- Main Work Area -->
            <section class="work-area">
                <!-- DAW Selector -->
                <div class="daw-selector-panel">
                    <h3>üéõÔ∏è DAW Integration</h3>
                    <div class="daw-options">
                        <div class="daw-option active" data-daw="reaper">
                            <div class="daw-icon">üéöÔ∏è</div>
                            <span>REAPER</span>
                            <div class="status connected">‚óè</div>
                        </div>
                        <div class="daw-option disabled" data-daw="logic">
                            <div class="daw-icon">üéπ</div>
                            <span>Logic Pro</span>
                            <div class="status coming-soon">Coming Soon</div>
                        </div>
                        <div class="daw-option disabled" data-daw="protools">
                            <div class="daw-icon">üéõÔ∏è</div>
                            <span>Pro Tools</span>
                            <div class="status coming-soon">Coming Soon</div>
                        </div>
                        <div class="daw-option disabled" data-daw="ableton">
                            <div class="daw-icon">üéµ</div>
                            <span>Ableton Live</span>
                            <div class="status coming-soon">Coming Soon</div>
                        </div>
                    </div>
                </div>

                <!-- MORPHEUS Integration -->
                <div class="ecosystem-panel">
                    <h3>üåê Ecosystem Integration</h3>
                    <div class="ecosystem-grid">
                        <div class="ecosystem-card morpheus">
                            <div class="card-icon">üéõÔ∏è</div>
                            <h4>MORPHEUS</h4>
                            <p>Hardware Workstation</p>
                            <div class="status coming-soon">NAMM 2026</div>
                        </div>
                        <div class="ecosystem-card avic">
                            <div class="card-icon">üé¨</div>
                            <h4>AVIC</h4>
                            <p>Audio/Video Controller</p>
                            <div class="status coming-soon">In Development</div>
                        </div>
                    </div>
                </div>

                <!-- Command Log -->
                <div class="command-log">
                    <h3>üìù Command History</h3>
                    <div class="log-container" id="command-log">
                        <div class="log-entry">
                            <span class="timestamp">--:--:--</span>
                            <span class="command">"Waiting for commands..."</span>
                            <span class="result ready">üé§ Ready</span>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!-- Status Bar -->
        <footer class="status-bar">
            <div class="status-section">
                <span id="connection-status">üî¥ Initializing...</span>
            </div>
            <div class="status-section">
                <span id="voice-engine-status">üé§ Voice Engine Starting...</span>
            </div>
            <div class="status-section">
                <span>üß† RHEA v1.0</span>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="scripts/app.js"></script>
    <script src="scripts/rhea.js"></script>
</body>
</html>
