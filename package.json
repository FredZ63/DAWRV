{
  "name": "dawrv",
  "productName": "DAWRV - Digital Audio Workstation Response to Voice",
  "version": "1.0.0",
  "description": "AI-powered voice control platform featuring RHEA - Responsive Heuristic Environment Assistant",
  "main": "src/main/main.js",
  "scripts": {
    "start": "DEEPGRAM_API_KEY=$DEEPGRAM_API_KEY electron .",
    "dev": "DEEPGRAM_API_KEY=$DEEPGRAM_API_KEY electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac:dmg": "electron-builder --mac dmg",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:complete": "./build_app.sh"
  },
  "keywords": ["audio", "DAW", "voice", "AI", "RHEA", "MORPHEUS", "music production"],
  "author": "Frederick Zimmerman",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.2"
  }
}
