{
  "name": "atlas-midi-manager",
  "productName": "ATLAS - Automatic Transfer and Librarian for Audio Synthesizers",
  "version": "1.0.0",
  "description": "Universal MIDI patch librarian with MIDI 2.0 support. Works standalone or integrates with any DAW.",
  "main": "src/main/main.js",
  "author": "Frederick Zimmerman",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac:dmg": "electron-builder --mac dmg",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.atlas.midi-manager",
    "productName": "ATLAS",
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Audio"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "core/**/*",
      "devices/**/*",
      "integrations/**/*",
      "package.json"
    ]
  },
  "keywords": [
    "midi",
    "midi2",
    "sysex",
    "synthesizer",
    "patch",
    "librarian",
    "music",
    "audio",
    "DAW"
  ],
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "midi": "^2.0.0",
    "ws": "^8.14.2",
    "axios": "^1.6.0"
  }
}
