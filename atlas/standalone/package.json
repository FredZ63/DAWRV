{
  "name": "atlas-standalone",
  "productName": "ATLAS",
  "version": "1.0.0",
  "description": "ATLAS Standalone Application - MIDI Patch Librarian",
  "main": "src/main/main.js",
  "author": "Frederick Zimmerman",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac:dmg": "electron-builder --mac dmg",
    "build:mac:universal": "electron-builder --mac --universal",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.atlas.midi-manager",
    "productName": "ATLAS",
    "mac": {
      "category": "public.app-category.music",
      "icon": "../shared/assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal", "x64", "arm64"]
        }
      ],
      "entitlements": "entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "../shared/assets/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Audio",
      "icon": "../shared/assets/icon.png"
    },
    "files": [
      "src/**/*",
      "../shared/**/*",
      "../core/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "../shared/assets",
      "output": "dist"
    }
  },
  "keywords": [
    "midi",
    "midi2",
    "sysex",
    "synthesizer",
    "patch",
    "librarian",
    "music",
    "audio"
  ],
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "ws": "^8.14.2"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.2.2",
    "midi": "^2.0.0"
  }
}
